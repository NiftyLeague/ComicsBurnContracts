{
  "name": "niftyleague-comics-burn",
  "version": "1.0.0",
  "description": "NiftyLeague Comics Burn Smart Contract",
  "main": "index.js",
  "scripts": {
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "prettier": "prettier --write \"contracts/**/*.sol\" \"test/**/*.js\"",
    "build": "npm run compile",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage --network hardhat",
    "deploy:hardhat": "hardhat deploy --deploy-scripts ./deploy/hardhat",
    "deploy:remote": "hardhat deploy --deploy-scripts ./deploy/remote --network",
    "test": "npx hardhat test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-etherscan": "^2.1.6",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.1.0",
    "@openzeppelin/contracts-upgradeable": "^4.1.0",
    "@openzeppelin/hardhat-upgrades": "^1.8.2",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.5.3",
    "hardhat": "^2.6.4",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-deploy": "^0.9.6",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^6.0.0",
    "mocha": "^9.0.0",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.9",
    "solhint": "^3.3.4",
    "solidity-coverage": "^0.7.17",
    "ts-generator": "^0.1.1"
  },
  "dependencies": {
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/bignumber": "^5.3.0",
    "@ethersproject/providers": "^5.7.1",
    "@ethersproject/wallet": "^5.7.0",
    "@imtbl/imlogging": "^1.0.37",
    "@imtbl/imx-contracts": "^1.0.1",
    "@imtbl/imx-sdk": "^1.33.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@typechain/hardhat": "^6.1.3",
    "dotenv": "^16.0.3",
    "ts-command-line-args": "^2.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  }
}
